<div style="color: red;" class="time_line">
  Questions TimeLine
</div>

<div class="container">
  <% @questions.each do |question|%>
    <div class="box">
      <i class="fas fa-angle-right"></i>
      <%= link_to question.title, question_path(question.id), class:"title" %>
        <% if current_user.already_favorited?(question) %>
          <%= link_to question_favorites_path(question), method: :delete, class:"fav_heart" do %> 
            <i class="fas fa-heart"></i> 
          <% end %> 
        <% else %> 
          <%= link_to question_favorites_path(question), method: :post, class:"fav_heart" do %> 
            <i class="far fa-heart"></i> 
          <% end %> 
        <% end %> 
      <%= question.favorites.count %>
      <%= link_to question_path(question.id) , method: :delete, class:"delete" do %>
        <i class="fas fa-trash"></i>
      <% end %>
    </div>
    <div class="tag_container">
      <div class="tag_list">
        <% question.tag_list.each do |tag| %>
          <span class="tag" style="background-color: #e9e9e9; border-radius: 5px;"><%= tag %></span>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<div class="tags_index">
  <% @tags.each do |tag| %>
    <%= link_to "#{tag.name}(#{tag.taggings_count})", questions_path(tag: tag.name) %>
  <% end %>
</div>

<% if @question.present? %>
  <div class="tagging_titles">
    <% @question.each do |question| %>
      <span><%= question.title%> by<%= question.user.nickname%></span>
    <% end %>
  </div>
<% end %>



