<%= render "shared/header_question" %>

<div class="sign_up_container">
  <h2 class="sign_up_header">
    Let's Sign Up!!
  </h2>
  <div class="sign_up_input">
    <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
      <%= render "devise/shared/error_messages" %>
      
      <div class="field">
        <%= f.label :nickname %><br />
        <%= f.text_field :nickname, autocomplete: "nickname" %>
      </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em><% @minimum_password_length %></em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="sign_up_btn">
        <%= f.submit "Sign Up" ,class:"sign-up-btn" %>
      </div>
    <% end %>
    <%# <%= render "devise/shared/links" %> 
  </div>
</div>

<%= render "shared/footer_question" %>
