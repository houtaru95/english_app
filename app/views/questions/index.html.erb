<div class="container_wrap">
  <div class="under_header">
    <div style="color: red;" class="Time_Line">
      <p class="Time-Line">Time Line</p>
    </div>
    <div style="color: red;" class="Search_Words">
      <p class="Search-Words">Search for Titles</p>
    </div>
    <div style="color: red;" class="Tags_List">
      <p class="Tags-List">Tags List</p>
    </div>
  </div>
  </div>
  <div class="container">
    <div class="left_side_container">
      <% @questions.each do |question|%>
        <div class="box">
          <i class="fas fa-angle-right"></i>
          <%= link_to question.title, question_path(question.id), class:"title" %>
            <% if current_user.already_favorited?(question) %>
              <%= link_to question_favorites_path(question), method: :delete, class:"fav_heart" do %> 
                <i class="fas fa-heart"></i> 
              <% end %> 
            <% else %> 
              <%= link_to question_favorites_path(question), method: :post, class:"fav_heart" do %> 
                <i class="far fa-heart"></i> 
              <% end %> 
            <% end %> 
          <%= question.favorites.count %>
          <%= link_to question_path(question.id) , method: :delete, class:"delete" do %>
            <i class="fas fa-trash"></i>
          <% end %>
        </div>
        <div class="tag_container">
          <div class="tag_list">
            <% question.tag_list.each do |tag| %>
              <span class="tag" style="background-color: #e9e9e9; border-radius: 5px;"><%= tag %></span>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="center_container">
      <div class="search_form">
        <%= form_with(url: search_questions_path , local: true, method: :get, class: "search-form") do |f| %>
          <div class="search_input">
            <%= f.text_field :keyword, placeholder: "Let's Search for Questions!!", class: "search-input" %>
          </div>
          <div class="search_btn"> 
            <%= f.submit "GO", class: "search-btn" %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="right_side_container">
      <div class="tags_index">
        <% @tags.each do |tag| %>
          <div class="tag_index">
            <%= link_to "#{tag.name} [#{tag.taggings_count}]", questions_path(tag: tag.name), class:"tag-index" %>
        </div> 
        <% end %>
      </div>
    </div>
  </div>
</div>
