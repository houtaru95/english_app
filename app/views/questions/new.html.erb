<div class="question_container">
  <h2 class="question_header">
    Let's Make a Question!!!
  </h2>
  <div class="question_input">
    <%= form_with model: @question, url: questions_path, local: true do |f| %>
      <div class="question_title">
          <%= f.label :title, "Title" %><br />
          <%= f.text_field :title, autocomplete: "title", class:"question-title" %>
      </div>

      <div class="question_content">
          <%= f.label :content, "Question" %><br />
          <%= f.text_area :content, autocomplete: "content",rows:2, class:"question-content" %>
      </div>

      <div class="question_choice">
        <%= f.label :choice_1, "No.1" %><br />
        <%= f.text_field :choice_1, autocomplete: "off", class:"question-choice" %>
      </div>
      
      <div class="question_choice">
        <%= f.label :choice_2, "No.2" %><br />
        <%= f.text_field :choice_2, autocomplete: "off", class:"question-choice" %>
      </div>

      <div class="question_choice">
        <%= f.label :choice_3, "No.3" %><br />
        <%= f.text_field :choice_3, autocomplete: "off", class:"question-choice" %>
      </div>

      <div class="question_choice">
        <%= f.label :choice_4, "No.4" %><br />
        <%= f.text_field :choice_4, autocomplete: "off", class:"question-choice" %>
      </div>

      <div class="answer_num">
        <%= f.label :answer_num, "Answer Number" %><br />
        <%= f.text_field :answer_num, autocomplete: "answer_num", class:"answer-num" %>
      </div>

      <div class="tag_list">
        <%= f.label :tag_list, "Tags" %><br />
        <%= text_field_tag 'question[tag_list]', @question.tag_list, class:"tag_list" %>
      </div>

      <div class="question_submit">
        <%= f.submit "GO", class:"submit-btn" %>
      </div>
    <% end %>
  </div>
</div>
